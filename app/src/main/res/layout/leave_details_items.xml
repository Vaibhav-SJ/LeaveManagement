<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:padding="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout"
            android:paddingLeft="@dimen/dimen_10dp"
            android:foreground="@drawable/ripple_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_10dp"
            tools:ignore="RtlSymmetry">


            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanctioned Date : "
                android:textSize="@dimen/dimen_16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/dateAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/dateTxt"
                android:text="@string/_2_and_half"
                android:textSize="@dimen/dimen_18sp"
                android:layout_toEndOf="@id/dateTxt"
                android:layout_marginStart="@dimen/dimen_10dp" />

            <TextView
                android:id="@+id/daysTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateAns"
                android:text="No. of Days : "
                android:textSize="@dimen/dimen_16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/daysAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateAns"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/daysTxt"
                android:text="@string/_2_and_half"
                android:textSize="@dimen/dimen_18sp"
                android:layout_toEndOf="@id/daysTxt"
                android:layout_marginStart="@dimen/dimen_10dp" />

            <TextView
                android:id="@+id/remarkTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/daysAns"
                android:text="Remarks : "
                android:textSize="@dimen/dimen_16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/remarkAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/remarkTxt"
                android:layout_toRightOf="@id/image"
                android:text="@string/_99648598655"
                android:textSize="@dimen/dimen_18sp"
                android:layout_toEndOf="@id/image" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>